<p id="notice"><%= notice %></p>

<% @folios.each do |f| %>
    <div class="small-12 columns">

      <%= link_to f do %>
          <div class="panel">
            <%= image_tag f.image.url(:large) %>
            <h3 class="panel-title"><%= f.title %></h3>
            <p><%= f.description %></p>
            <%= link_to "Ver", f %>
            <%= link_to "Editar", edit_folio_path(f) %>
          </div>
      <% end %>



    </div>
<% end %>

